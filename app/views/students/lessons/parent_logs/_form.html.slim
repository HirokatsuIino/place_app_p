  .margin-bottom-20px
  = f.submit '下書き保存する', name: 'draft', class: 'button button--sub full'

javascript:
  $(document).on('ready page:load', function() {
    $('.tooltip').tooltipster({
      theme: 'tooltipster-shadow',
      maxWidth: 800
    });
  });

sass:
  .tooltip_content
    padding: 10px
    line-height: 1.8em
    font-size: 14px

    ul li,
    ol li
      padding-left: 1em
      text-indent: -1em
      list-style-position: inside

  .tooltip_templates
    display: none
